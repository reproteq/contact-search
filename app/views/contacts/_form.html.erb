<div class="w-50 p-3" style="background-color: #eee;">  
<%= form_with(model: contact, local: true,class: "form-group") do |form| %>
  <% if contact.errors.any? %>
    <div class="field form-group" id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre , class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= form.label :apellidos %>
    <%= form.text_field :apellidos, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :calle %>
    <%= form.text_field :calle , class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= form.label :poblacion %>
    <%= form.text_field :poblacion , class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= form.label :provincia %>
    <%= form.text_field :provincia, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :pais %>
    <%= form.text_field :pais, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.submit 'Aceptar',class:'btn btn-primary btn-block'  %>
  </div>
<% end %>
</div>

