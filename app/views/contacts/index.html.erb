<p id="notice"><%= notice %></p>
<h4>Lista de contactos</h4>
 <p><%= link_to("AÃ±adir contacto", new_contact_path, data: { turbolinks: false } , :class => "btn btn-success" ) %></p>

<i class="fab fa-facebook-f fa-3x mx-2"></i>
<table class="table table-hover" summary="Contact List">  
  <thead>
    <tr class="header">
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Calle</th>
      <th>Poblacion</th>
      <th>Provincia</th>
      <th>Pais</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.nombre %></td>
        <td><%= contact.apellidos %></td>
        <td><%= contact.calle %></td>
        <td><%= contact.poblacion %></td>
        <td><%= contact.provincia %></td>
        <td><%= contact.pais %></td>
        
         <td><%= link_to("Ver", contact, data: { turbolinks: false }, :class => "btn btn-primary") %> </td>
         <td><%= link_to("Editar", edit_contact_path(contact), data: { turbolinks: false }, :class => "btn btn-success") %>  </td>      
    <td>          
        <!-- Button trigger modal -->    
    <button type="button" class="btn btn-danger"  data-method="delete" href="<%= url_for(contact) %>"  data-toggle="modal" data-target="#exampleModal<%= contact.id  %>"> Borrar</button>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal<%= contact.id  %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"> 
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Borrar</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Estas seguro de querer eliminar esto?
            </div>
            <div class="modal-footer">
             <button type="button" class="btn btn-secondary" data-dismiss="modal">NO</button>    
             <%= button_to 'Destroy', contact, method: :delete, data: { },:class => "btn btn-primary" %>             
            </div>
          </div>
        </div>
      </div>
     </td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

